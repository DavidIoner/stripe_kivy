<App@MDFloatLayout>

    MDTextField:
        id: worker
        hint_text: "Worker name"
        pos_hint: {"x": 0.05, "y": 0.9}
        size_hint_x: 0.4
        write_tab: False
        multiline: False
        on_text_validate: app.handle_key()

    MDTextField:
        id: wage
        hint_text: "bi-weekly wage"
        pos_hint: {"x": 0.05, "y": 0.8}
        size_hint_x: 0.4
        write_tab: False
        multiline: False
        on_text_validate: app.handle_key()

    MDTextField:
        id: christmas
        hint_text: "christmas"
        pos_hint: {"x": 0.05, "y": 0.7}
        size_hint_x: 0.4
        write_tab: False
        multiline: False
        on_text_validate: app.handle_key()

    MDTextField:
        id: desk
        hint_text: "bi-weekly desk fee"
        pos_hint: {"x": 0.05, "y": 0.6}
        size_hint_x: 0.4
        write_tab: False
        multiline: False
        on_text_validate: app.handle_key()

    MDSwitch:
        id: holiday_check
        pos_hint: {"x": 0.05, "y": 0.5}
        on_active: app.check_holiday(*args)

    MDLabel:
        id: holiday_label
        text: "Holiday fee deactive!"
        pos_hint: {"x": 0.2, "y": 0.49}
        size_hint: 0.4, 0.1

    MDDropDownItem:
        id: drop_customer
        pos_hint: {"x": 0.55, "y": 0.9}
        text: 'select the customer'
        size_hint: 0.4, 0.1
        on_release: app.customer_menu.open()

    MDList


    MDRaisedButton:
        id: btn_submit
        text: "Submit worker"
        pos_hint: {"x": 0.05, "y": 0.1}
        size_hint: 0.2, 0.1
        on_release: 
            app.submit()

    MDRaisedButton:
        id: btn_contract
        text: "Create contract"
        pos_hint: {"x": 0.4, "y": 0.1}
        size_hint: 0.2, 0.1
        on_release: 
            app.generate_pdf()

    MDRaisedButton:
        id: btn_payment
        text: "submit payment"
        pos_hint: {"x": 0.75, "y": 0.1}
        size_hint: 0.2, 0.1
        on_release: 
            app.submit_payments()
App