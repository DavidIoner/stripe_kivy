<App@MDFloatLayout>

    MDTextField:
        id: customer
        hint_text: "customer name"
        pos_hint: {"x": 0.05, "y": 0.8}
        size_hint_x: 0.4
        write_tab: False
        multiline: False
        on_text_validate: app.handle_key()
    
    MDTextField:
        id: company
        hint_text: "Company name"
        pos_hint: {"x": 0.05, "y": 0.7}
        size_hint_x: 0.4
        write_tab: False
        multiline: False
        on_text_validate: app.handle_key()

    MDTextField:
        id: located_at
        hint_text: "Located at"
        pos_hint: {"x": 0.05, "y": 0.6}
        size_hint_x: 0.4
        write_tab: False
        multiline: False
        on_text_validate: app.handle_key()

    MDTextField:
        id: phone
        hint_text: "Phone number"
        pos_hint: {"x": 0.05, "y": 0.5}
        size_hint_x: 0.4
        write_tab: False
        multiline: False
        on_text_validate: app.handle_key()

    MDTextField:
        id: email
        hint_text: "E-mail"
        pos_hint: {"x": 0.05, "y": 0.4}
        size_hint_x: 0.4
        write_tab: False
        multiline: False
        on_text_validate: app.handle_key()

    MDTextField:
        id: licensor
        hint_text: "Licensor name"
        pos_hint: {"x": 0.05, "y": 0.3}
        text: "Nigel Shamash"
        size_hint_x: 0.4
        write_tab: False
        multiline: False
        on_text_validate: app.handle_key()


    MDTextField:
        id: card_number
        hint_text: "Card number"
        pos_hint: {"x": 0.55, "y": 0.4}
        size_hint_x: 0.4
        write_tab: False
        multiline: False
        on_text_validate: app.handle_key()
    
    MDTextField:
        id: exp_month
        hint_text: "Expiration month"
        pos_hint: {"x": 0.55, "y": 0.3}
        size_hint_x: 0.2
        write_tab: False
        multiline: False
        on_text_validate: app.handle_key()
   
    MDTextField:
        id: exp_year
        hint_text: "Expiration year"
        pos_hint: {"x": 0.8, "y": 0.3}
        size_hint_x: 0.2
        write_tab: False
        multiline: False
        on_text_validate: app.handle_key()

    MDTextField:
        id: cvv
        hint_text: "cvv"
        pos_hint: {"x": 0.55, "y": 0.2}
        size_hint_x: 0.4
        write_tab: False
        multiline: False
        on_text_validate: app.handle_key()


    MDDropDownItem:
        id: drop_local
        pos_hint: {"x": 0.55, "y": 0.9}
        text: 'select the location'
        size_hint: 0.4, 0.1
        on_release: app.local_menu.open()

    MDDropDownItem:
        id: drop_customer
        pos_hint: {"x": 0.05, "y": 0.9}
        text: 'select the customer'
        size_hint: 0.4, 0.1
        on_release: app.customer_menu.open()

    MDSwitch:
        id: christmas
        pos_hint: {"x": 0.47, "y": 0.8}
        on_active: app.check_christmas(*args)

    MDLabel:
        id: christmas_label
        text: "Christmas bonus deactive!"
        pos_hint: {"x": 0.55, "y": 0.79}
        size_hint: 0.4, 0.1   


    MDSwitch:
        id: currency
        pos_hint: {"x": 0.47, "y": 0.7}
        on_active: app.check_currency(*args)
    
    MDLabel:
        id: currency_label
        text: "Currency is USD!"
        pos_hint: {"x": 0.55, "y": 0.69}
        size_hint: 0.4, 0.1   


    MDRaisedButton:
        id: btn
        text: "Submit customer"
        pos_hint: {"x": 0.05, "y": 0.1}
        size_hint: 0.2, 0.1
        on_release: 
            app.submit()

    MDRaisedButton:
        id: btn_payment
        text: "Submit payment method"
        pos_hint: {"x": 0.55, "y": 0.1}
        size_hint: 0.2, 0.1
        on_release: 
            app.submit_payment_method()


App